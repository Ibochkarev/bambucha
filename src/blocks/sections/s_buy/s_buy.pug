section#s_buy.s-buy
  .l-section__outer
    .l-wide.l-section__wrapper
      .s-buy__wrapper
        .s-buy__col
          img.s-buy__img.animation-icon(src="./img/s-buy/banki.svg", alt="", loading="lazy" data-scroll)
        .s-buy__col
          h2.l-section__title.a-font_h4.animation-text(data-scroll) Покупайте на здоровье
          .l-section__text.a-font_xl.a-font_regular.animation-text(data-scroll) Выбирайте удобный способ покупки BAMBUCHA на маркетплейсах

          .s-buy__logos
            a.s-buy__logos-item.animation-icon(href="" data-scroll)
              +svgMono("logo-ozon")
            a.s-buy__logos-item.animation-icon(href="" data-scroll)
              +svgMono("logo-wb")

          .s-buy__tabs
            a.s-buy__tab.a-font_xl.a-font_bold.is-active.animation-text(data-tab="buy_package" data-scroll) Упаковка
            a.s-buy__tab.a-font_xl.a-font_bold.animation-text(data-tab="buy_pallet" data-scroll) Паллет

          .s-buy__tabs-contents
            .s-buy__tabs-content.a-font_l.is-active(id="buy_package")
              .s-buy__info
                .s-buy__info-name.animation-text(data-scroll) Банка
                .s-buy__info-value.animation-text(data-scroll) 0,33 л
              .s-buy__info
                .s-buy__info-name.animation-text(data-scroll) Материал
                .s-buy__info-value.animation-text(data-scroll) алюминий
              .s-buy__info
                .s-buy__info-name.animation-text(data-scroll) Срок годности
                .s-buy__info-value.animation-text(data-scroll) 12 мес
              .s-buy__info
                .s-buy__info-name.animation-text(data-scroll) Размеры
                .s-buy__info-value.animation-text(data-scroll) 26х20х17 см
              .s-buy__info
                .s-buy__info-name.animation-text(data-scroll) Вес
                .s-buy__info-value.animation-text(data-scroll) 4,5 кг

            .s-buy__tabs-content.a-font_l(id="buy_pallet")
              .s-buy__info
                .s-buy__info-name.animation-text(data-scroll) Банка
                .s-buy__info-value.animation-text(data-scroll) 0,33 л
              .s-buy__info
                .s-buy__info-name.animation-text(data-scroll) Материал
                .s-buy__info-value.animation-text(data-scroll) алюминий
              .s-buy__info
                .s-buy__info-name.animation-text(data-scroll) В слое
                .s-buy__info-value.animation-text(data-scroll) 19 упаковок / 228 шт.
              .s-buy__info
                .s-buy__info-name.animation-text(data-scroll) Слоёв
                .s-buy__info-value.animation-text(data-scroll) 10
              .s-buy__info
                .s-buy__info-name.animation-text(data-scroll) В паллете
                .s-buy__info-value.animation-text(data-scroll) 190 упаковок / 2280 шт.
              .s-buy__info
                .s-buy__info-name.animation-text(data-scroll) Размеры
                .s-buy__info-value.animation-text(data-scroll) 120х80х190 см, вес 860 кг