              .s-neurobooster__item
                .s-neurobooster__item-headline
                  img.s-neurobooster__item-img(src=item.image, alt="")
                  .s-neurobooster__item-title!= item.title
                .s-neurobooster__item-text.a-font_l.a-font_light= item.text
